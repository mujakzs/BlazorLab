@page "/learnBlazor/parentComponent"
@using BlazorLab.Components.Shared

<h3>ParentComponent</h3>

<CascadingValue Value="@MessageForGrandChild">
	<_ChildComponent OnButtonClick="ShowMessage"
					 Title="Hello Team"
					 GrandchildMessage="I love my GrandChild">
		<Head>
			<h1>Header</h1>
		</Head>
		<ChildContent>
			<p>This is child content from ParentComponent</p>
			<br />

		</ChildContent>

		<ChildSomeContent>
			<p>This is some other child content from ParentComponent</p>
		</ChildSomeContent>

	</_ChildComponent>
</CascadingValue>



<p>@message</p>



@code {

	private string MessageForGrandChild = "Message from ParentComponent to GrandChildComponent";
	public string message = "";

	public void ShowMessage()
	{
        message = "Button clicked in ChildComponent";
	}

}
